<h2>Добавление нового поста</h2>
<%= form_for :post, url: posts_path do |f| %>
  <p>
    Название <br>
    <%= f.text_field(:title, {:class => "form-control"}) %>
  </p>
  <p>
    Текст статьи <br>
    <%= f.text_area(:body, {:class => "form-control"}) %>
  </p>
  <p>
    <%= f.submit({:class => "btn btn-primary"}) %>
  </p>
<% end %>
